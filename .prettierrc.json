{
    "parser": "typescript",
    "trailingComma": "es5",
    "tabWidth": 4,
    "useTabs": false,
    "arrowParens": "avoid",
    "semi": true,
    "singleQuote": false,

    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,

    "overrides": [
        {
            "files": "*.{yml,yaml}",
            "options": {
                "semi": false,
                "tabWidth": 2,
                "parser": "yaml"
            }
        },
        {
            "files": "*.md",
            "options": {
                "tabWidth": 2,
                "parser": "markdown"
            }
        },
        {
            "files": "*.json",
            "options": { "parser": "json" }
        },
        {
            "files": "*.{ts,tsx}",
            "options": {
                "singleQuote": false,
                "parser": "typescript"
            }
        },
        {
            "files": "*.{svg,html}",
            "options": { "parser": "html" }
        },
        {
            "files": ["*.code-workspace"],
            "options": { "parser": "json" }
        }
    ]
}
